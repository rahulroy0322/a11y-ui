{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!node_modules",
      "!.next",
      "!dist",
      "!build",
      "!.turbo"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "attributePosition": "multiline",
    "bracketSameLine": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "style": {
        "noCommonJs": "error",
        "noNamespace": "error",
        "useArrayLiterals": "error",
        "useAsConstAssertion": "error"
      },
      "security": {
        "recommended": true,
        "noGlobalEval": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "error",
        "noClassAssign": "error",
        "noConfusingLabels": "error",
        "noConsole": {
          "options": {
            "allow": [
              "error",
              "warn"
            ]
          },
          "level": "on"
        },
        "noConstEnum": "error",
        "noDoubleEquals": "error",
        "noDuplicateAtImportRules": "error",
        "noDuplicateCase": "error",
        "noDuplicateElseIf": "error",
        "noImplicitAnyLet": "error",
        "noUnassignedVariables": "error",
        "noUnknownAtRules": "off",
        "noVar": "error",
        "recommended": false,
        "useAwait": "off",
        "noExplicitAny": "error",
        "noExtraNonNullAssertion": "error",
        "noMisleadingInstantiator": "error",
        "noUnsafeDeclarationMerging": "error",
        "useNamespaceKeyword": "error"
      },
      "complexity": {
        "recommended": true,
        "useArrowFunction": "error",
        "useIndexOf": "error",
        "noUselessTypeConstraint": "error"
      },
      "correctness": {
        "noConstAssign": "error",
        "noUnusedFunctionParameters": "error",
        "noUnusedImports": "error",
        "noUnusedLabels": "error",
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error",
        "noUndeclaredVariables": "error",
        "noUnreachable": "error"
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "javascript": {
    "formatter": {
      "attributePosition": "multiline",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "es5"
    }
  },
  "json": {
    "formatter": {
      "bracketSpacing": true,
      "enabled": true,
      "expand": "always",
      "indentStyle": "space",
      "trailingCommas": "none"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on",
        "recommended": true,
        "useSortedAttributes": "on",
        "useSortedProperties": "on"
      }
    }
  }
}
